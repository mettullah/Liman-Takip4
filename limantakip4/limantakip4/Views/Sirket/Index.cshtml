@using limantakip4.Models
@model List<Sırkett>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SirketLayout.cshtml";
}

<h2>Index</h2>
<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>SIRKETAD</th>
            <th>SIL</th>
            <th>GUNCELLE</th>

        </tr>
    </thead>
    @foreach (var srkt in Model)
    {
        <tr>
            <td>@srkt.ID </td>
            <td>@srkt.SIRKETAD </td>
            <td>

                <a href="/Sirket/SIL/@srkt.ID" class="btn btn-danger">SIL</a>
            </td>
            <td>
                <a href="/Sirket/SırketGetir/@srkt.ID" class="btn btn-primary">GUNCELLE</a>

            </td>
        </tr>
    }




</table>
<a href="/Sirket/SırketEkle/" class="btn btn-primary">Sirket Ekle</a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl2').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl2').DataTable();

</script>